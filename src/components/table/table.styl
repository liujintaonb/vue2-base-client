.flex-row {
  display flex
  flex-direction row
  justify-content space-between
  & > * {
    flex 1
  }
}

.info-set {
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  padding-right 50px
  font-size 14px
  font-weight bold;
}

.info-title {
  color #565656
  font-size 14px
}
.info-value {
  color #5f5f5f
  font-size 14px
  font-weight bolder
}
.c-table {
  overflow-x auto;
  table {
    border 1px #d4d4d4 solid
    td {
      color #5f5f5f
      font-size 14px
      font-weight bolder
      padding 0px 4px
      min-height: 48px;
      height: 48px;
      text-align center
      vertical-align: middle;
      .el-input {
        width 100px;
        max-width 120px
      }
    }
    // 为了比td权重大
    .info-title {
      color #353535
      font-size 14px
    }
    /deep/ .el-input__inner {
      color #003D41
      font-size 14px
      font-weight bolder
    }
  }
}
.c-table.fire-table {
  .el-input,.el-input-number {
    width 100%
    max-width none
  }
}
.c-table:not(:first-child) {
  margin-top 30px;
}

.c-table table tr:first-child {
  background-color #fafafa
}

